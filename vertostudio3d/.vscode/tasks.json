{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                //remember these are the flags/args passed to gcc so your flags are needed here
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lmingw32",
                "-lsdl2main",
                "-lsdl2",
                "-mwindows",
                "-lSDL2_image"

            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            }
        }
    ],
    "version": "2.0.0"
}